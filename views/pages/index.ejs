  <script>
  var count = 0;
    function buy(a){
      if (a.hasChildNodes())
      {
        console.log("wow" + a.nodeName)
        var x = ""
        var children = a.children;
        for (var i = 0 ; i < children.length ; ++i)
        {
          if (children[i].nodeName == "P")
          {
            x += (children[i].textContent) + " ";
            //console.log(children[i].nodeName)
          }
        }
        let t = confirm("Add the item to cart??\n" + x);
        if(t)
        {
          count+=1;
          document.getElementById("productinfo").innerHTML = (count+" products in your cart");
          axios.post('/customer/fetchdata', { params: { str : x }} ).then((data)=>{
            console.log(data.data)
            alert(data)
          })
        }
      }
      //console.log(document.body.a.childNodes[1].nodeValue);
      console.log("ok")
    }
  </script>
  <p id="productinfo"></p>
  <br>
